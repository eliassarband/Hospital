@page "/Staffs"
@using Hospital.Application.Commands
@using Hospital.Application.Queries
@using Hospital.Application.Responses
@using Hospital.Application.ViewModels
@using Hospital.Domain.Core.Entities;
@using MediatR
@inject IMediator mediator;
@inject IDialogService DialogService
@inject ISnackbar Snackbar

@attribute [Authorize(Roles = "Super,Admin")]

<MudGrid Class="mt-2">
    <MudItem md="12">
        <MudPaper Class="mt-2" Elevation="10">
            <MudCard Class="pl-2 pr-2 mt-2">
                <MudCardHeader>Staffs</MudCardHeader>
                <MudCardActions>
                    <MudButton ButtonType="MudBlazor.ButtonType.Button" StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary" Variant="Variant.Filled" Href=@String.Format("StaffDefine/0")>Add Staff</MudButton>
                </MudCardActions>
                <MudCardContent>
                    <MudTable @ref="@_table" Items="@Elements" RowsPerPage="5" Hover="true" FixedHeader="true" FixedFooter="true" Striped="true" Breakpoint="Breakpoint.Sm" Class="" Loading="@loading" LoadingProgressColor="Color.Info" Filter="new Func<StaffViewModel,bool>(FilterStaffInit)">
                        <ToolBarContent>
                            <MudSpacer />
                            <MudTextField @bind-Value="searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0" Clearable></MudTextField>
                        </ToolBarContent>
                        <HeaderContent>
                            <MudTh>Staff Type</MudTh>
                            <MudTh>Code</MudTh>
                            <MudTh>Name</MudTh>
                            <MudTh>Date Of Joining</MudTh>
                            <MudTh>Date Of Birth</MudTh>
                            <MudTh>Speciality</MudTh>
                            <MudTh>Qualification</MudTh>
                            <MudTh>City</MudTh>
                            <MudTh>Area</MudTh>
                            <MudTh>Edit</MudTh>
                            <MudTh>Delete</MudTh>
                        </HeaderContent>
                        <RowTemplate>
                            <MudTd DataLabel="StaffTypeName">@context.StaffTypeName</MudTd>
                            <MudTd DataLabel="Code">@context.Code</MudTd>
                            <MudTd DataLabel="Name">@context.NamePrefixName @context.Name</MudTd>
                            <MudTd DataLabel="DateOfJoining">@context.DateOfJoining</MudTd>
                            <MudTd DataLabel="DateOfBirth">@context.DateOfBirth</MudTd>
                            <MudTd DataLabel="SpecialityName">@context.SpecialityName</MudTd>
                            <MudTd DataLabel="QualificationName">@context.QualificationName</MudTd>
                            <MudTd DataLabel="CityName">@context.CityName</MudTd>
                            <MudTd DataLabel="AreaName">@context.AreaName</MudTd>
                            <MudTd DataLabel="Edit">
                                <MudIconButton ButtonType="MudBlazor.ButtonType.Button" Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Href=@String.Format("StaffDefine/{0}",context.Id)></MudIconButton>
                            </MudTd>
                            <MudTd DataLabel="Delete">
                                <MudIconButton ButtonType="MudBlazor.ButtonType.Button" Icon="@Icons.Material.Filled.Delete" Color="Color.Secondary" OnClick="@(()=> DeleteStaff(@context.Id))"></MudIconButton>
                            </MudTd>
                        </RowTemplate>
                        <PagerContent>
                            <MudPagination ShowFirstButton="true" ShowLastButton="true" SelectedChanged="PageChanged" Count="@((_table.GetFilteredItemsCount() + _table.RowsPerPage - 1) / _table.RowsPerPage)" Class="pa-4" />
                        </PagerContent>
                    </MudTable>
                </MudCardContent>
            </MudCard>
        </MudPaper>
    </MudItem>
</MudGrid>



@code {
    private MudTable<StaffViewModel> _table;
    private List<StaffViewModel> Elements;
    private bool loading = false;
    private string searchString = "";

    protected override async Task OnInitializedAsync()
    {
        Elements = await mediator.Send(new GetAllStaffsQuery());
    }

    private void PageChanged(int i)
    {
        _table.NavigateTo(i - 1);
    }

    private bool FilterStaffInit(StaffViewModel element) => FilterStaff(element, searchString);

    private bool FilterStaff(StaffViewModel element, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true;
        if (element.Code.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (element.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (element.StaffTypeName.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (element.SpecialityName.ToString().Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (element.QualificationName.ToString().Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (element.CityName.ToString().Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (element.AreaName.ToString().Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if ($"{element.Code} {element.Name} {element.StaffTypeName} {element.SpecialityName} {element.QualificationName} {element.CityName} {element.AreaName}".Contains(searchString))
            return true;
        return false;
    }

    protected async Task DeleteStaff(int Id)
    {
        bool? dialogResult = await DialogService.ShowMessageBox(
            "Delete Staff",
            "Are you sure?",
            yesText: "Delete!", cancelText: "No");

        if (dialogResult == true)
        {
            loading = true;
            try
            {
                CommandResponse result;

                result = await mediator.Send(new DeleteStaffCommand(Id));

                if (result.ResultType == ResultType.Success)
                {
                    Elements = await mediator.Send(new GetAllStaffsQuery());
                    Snackbar.Add(result.ResultMessage, Severity.Success);
                }
                else if (result.ResultType == ResultType.Warning)
                {
                    Snackbar.Add(result.ResultMessage, Severity.Warning);
                }
                else if (result.ResultType == ResultType.Error)
                {
                    Snackbar.Add(result.ResultMessage, Severity.Error);
                }



            }
            catch (Exception exp)
            {
                Snackbar.Add(exp.Message, Severity.Error);
            }
            loading = false;

        }


    }


}
